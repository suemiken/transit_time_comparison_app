<AutoMeasureLayout>
    do_default_tab: False
    TabbedPanelItem:
        text: 'Measurement'
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                anchor_x:'center'
                anchor_y:'top'
                Label:
                    id: time
                    text:root.now_state
                    font_size:30
            AnchorLayout:
                anchor_x:'center'
                anchor_y:'center'
                Label:
                    text: root.time
                    markup: True
                    font_size:30
            AnchorLayout:
                anchor_x:'center'
                anchor_y:'center'
                Button:
                    id:now_measurement
                    text:root.control
                    size_hint:[0.4, 0.3]
                    font_size:30
                    on_press:root.buttonClicked()
    TabbedPanelItem:
        text: 'recoding List'
        CustomStackLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        #         # btn = Button(text='Hello World')
        #         # layout.add_widget(btn)
    TabbedPanelItem:
        text: 'mapping'
        MapViewLayout:
    TabbedPanelItem:
        text: 'setting'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    Label:
                        text:'input Start lon and lat'
                        font_size:30
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    TextInput:
                        id: start_tr
                        text: '[35.681473, 139.757559]'
                        size_hint:[0.4, 0.3]
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'center'
                    Button:
                        text:'OK'
                        size_hint:[0.4, 0.3]
                        font_size:30
                        on_press:root.buttonClicked_start()
            BoxLayout:
                orientation: 'vertical'
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    Label:
                        text:'input End lon and lat'
                        font_size:30
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    TextInput:
                        id: end_tr
                        text: '[35.681473, 139.757559]'
                        size_hint:[0.4, 0.3]
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'center'
                    Button:
                        text:'OK'
                        size_hint:[0.4, 0.3]
                        font_size:30
                        on_press:root.buttonClicked_end()
